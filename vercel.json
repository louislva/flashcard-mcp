{
  "buildCommand": "npm run build",
  "outputDirectory": ".",
  "framework": null,
  "functions": {
    "api/mcp.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/.well-known/oauth-protected-resource", "destination": "/api/resource-metadata" },
    { "source": "/.well-known/oauth-authorization-server", "destination": "/api/oauth-metadata" }
  ]
}
